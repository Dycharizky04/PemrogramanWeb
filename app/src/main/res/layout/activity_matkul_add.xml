<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CrudMk.MatkulAddActivity">


    <EditText
        android:id="@+id/editTeksNamaMk"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:hint="Nama Matakuliah"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTeksKodeMk"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:hint="Kode Matakuliah"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTeksNamaMk" />

    <EditText
        android:id="@+id/editTeksHariMk"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:hint="Hari Kuliah"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTeksKodeMk" />

    <EditText
        android:id="@+id/editTeksSesiMk"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:hint="Sesi Kuliah"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTeksHariMk" />

    <EditText
        android:id="@+id/editTeksSksMk"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:hint="Jumlah SKS Matakuliah"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTeksSesiMk" />

    <Button
        android:id="@+id/btnSave"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:text="Simpan"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTeksSksMk"
        app:layout_constraintVertical_bias="0.0" />
</androidx.constraintlayout.widget.ConstraintLayout>