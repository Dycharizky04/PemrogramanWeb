<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Uts.UtsMainActivity">

    <ImageButton
        android:id="@+id/imageButtonDsn"
        android:layout_width="128dp"
        android:layout_height="142dp"
        android:layout_marginTop="32dp"
        android:background="#FFFFFF"
        android:scaleType="centerInside"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.476"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewMahasiswa"
        app:srcCompat="@drawable/dosen" />

    <TextView
        android:id="@+id/textViewMahasiswa"
        android:layout_width="127dp"
        android:layout_height="41dp"
        android:text="Mahasiswa"
        android:textAlignment="center"
        android:textColor="#070707"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.471"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageButtonMhs" />

    <TextView
        android:id="@+id/textViewDosen"
        android:layout_width="127dp"
        android:layout_height="38dp"
        android:layout_marginTop="4dp"
        android:text="Dosen"
        android:textAlignment="center"
        android:textColor="#0E0E0E"
        android:textSize="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.471"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageButtonDsn" />

    <ImageButton
        android:id="@+id/imageButtonMatkul"
        android:layout_width="140dp"
        android:layout_height="123dp"
        android:layout_marginTop="36dp"
        android:background="#FFFFFF"
        android:scaleType="centerInside"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.487"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewDosen"
        app:srcCompat="@drawable/jadwal" />

    <ImageButton
        android:id="@+id/imageButtonMhs"
        android:layout_width="129dp"
        android:layout_height="135dp"
        android:layout_marginTop="80dp"
        android:background="#FFFFFF"
        android:scaleType="centerInside"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.474"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/mhs" />

    <TextView
        android:id="@+id/textViewMk"
        android:layout_width="139dp"
        android:layout_height="39dp"
        android:layout_marginBottom="16dp"
        android:text="Mata Kuliah"
        android:textAlignment="center"
        android:textColor="#121111"
        android:textSize="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageButtonMatkul"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textViewWelcome"
        android:layout_width="409dp"
        android:layout_height="46dp"
        android:background="#3954E8"
        android:text="Menu Utama"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/imageButtonDsn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btnLogOut"
        android:layout_width="133dp"
        android:layout_height="49dp"
        android:layout_marginTop="52dp"
        android:backgroundTint="#8E8A8A"
        android:text="Logout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/textViewWelcome"
        app:layout_constraintTop_toBottomOf="@+id/textViewMk" />


</androidx.constraintlayout.widget.ConstraintLayout>